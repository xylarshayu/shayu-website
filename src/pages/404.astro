---
import Layout from '@layouts/Layout.astro';
Astro.response.status = 404;
Astro.response.statusText = 'Not Found';
---

<Layout title="404 Not Found">
  <main class="flex flex-col items-center justify-center page-height gap-1">
    <h1 class="h1 text-green-500">
      No such page exists...
    </h1>
    <a href="/" class="underline italic cursor-pointer">Go Home 🏠</a>
  </main>
</Layout>