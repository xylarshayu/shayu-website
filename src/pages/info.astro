---
import Layout from '../layouts/Layout.astro';
import { cacheThis, CACHE_TAGS } from '@lib/utils';

const NAMES = [
  '(Ayush) Wardhan',
  'Woden',
  'ShitlordPalpatine',
  'Xylar',
  'snowyuuuu',
  'Monsieur Rongriddle',
  'Yusha',
  'oily grampa',
  'Mistah Mario'
];

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/xylarshayu' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/ayush-w-xylar' }
